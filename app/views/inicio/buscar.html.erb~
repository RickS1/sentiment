<style>
.tooltip {
  position: absolute;
  width: 200px;
  height: 28px;
  pointer-events: none;
}
</style>

<script src="https://d3js.org/d3.v4.min.js"></script>
<%= include_gon  %>
<script type="text/javascript">

//Cargamos los datos
d3.csv('http://200.12.162.229:81/usr_stats_Ayotzinapa.csv',function(data){
	data.forEach(function(d){d['followers'] = +d['followers']; d['following'] = +d['following'];});

	var width = 800;
	var height = 800;
	var margen = 50;
	var max_followers = d3.max(function(d){return d["followers"]});
	var max_following = d3.max(function(d){return d["following"]});

	var svg = d3.select("body").append("svg")
						.attr("width", width)
						.attr("height", height);

  var x = d3.scaleLinear()
					.domain(d3.extent(data, function(d){return d['followers']}))
					.range([margen, width - margen]);

	var y = d3.scaleLinear()
					.domain(d3.extent(data, function(d){return d['following']}))
					.range([height - margen, margen]);

	var ejeX = d3.axisBottom(x)
							.ticks(8);

	var ejeY = d3.axisLeft(y)
							.ticks(8)
							.tickFormat(function(d){return d/100000});

	var r = 3;

	var tooltip = d3.select("body").append("div")
    .attr("class", "tooltip")
    .style("opacity", 0);

	svg.append("g")
			.attr("class", "eje-x")
			.attr("transform", "translate(0," + (height- margen) + ")")
			.call(ejeX);
			
	svg.append("text")
			.attr("class", "label")
			.attr("x", width/2)
			.attr("y", height - (margen/2))
			.attr("text-anchor", "middle")
			.text("Seguidores");

	svg.append("g")
			.attr("class", "eje-y")
			.attr("transform", "translate(" + margen + ", 0)")
			.call(ejeY);	
		
	svg.append("text")
			.attr("class", "label")
			.attr("x", -(height /2))
			.attr("y", (margen/2))
			.attr("transform", "rotate(-90)")
			.attr("text-anchor", "middle")
			.text("Siguiendo (cientos de miles)");

	var points = svg.selectAll(".punto")
			.data(data)
			.enter().append("circle")
			.attr("class", "punto")
			.attr("r",r)
			.attr("cx", function(d){ return x(d["followers"])})
			.attr("cy", function(d){ return y(d["following"])})
			.attr("fill", function(d){ return "rgb(" + (255*d["followers"]/max_followers) + "," + (255*d["following"]/max_following) + ",255)"})
			.on("mouseover", function(d) {
          tooltip.transition()
               .duration(200)
               .style("opacity", .9);
          tooltip.html(d["id"] + "<br/> (" + d["followers"] 
	        + ", " + d["following"] + ")")
               .style("left", (d3.event.pageX + 5) + "px")
               .style("top", (d3.event.pageY - 28) + "px");
      })
      .on("mouseout", function(d) {
          tooltip.transition()
               .duration(500)
               .style("opacity", 0);
      });

});

</script>

