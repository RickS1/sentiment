<script src="//d3js.org/d3.v4.min.js"></script>
<script>

d3.csv('http://200.12.162.229:81/usr_stats_TrumpPresident.csv',function(data){
	
	var datos = [];

	var porcentajes_usuarios = [
		{i: 0, lab: "<1/4", color: "#dc143c", sum: 0},
		{i: 1, lab: "1/4 - 1/2", color: "#1e90ff", sum: 0},
		{i: 2, lab: "1/2 - 2", color: "#32CD32", sum: 0},
		{i: 3, lab: "2 - 4", color: "#FF8C00", sum: 0},
		{i: 4, lab: ">4", color: "#9932cc", sum: 0}
	];

	var p_usrs_c = [
		{i: 0, lab: "<1/4 Reciente", color: "#dc143c", opacity: 0.1, sum: 0},
		{i: 1, lab: "<1/4 Poco activo", color: "#dc143c", opacity: 0.1, sum: 0},
		{i: 2, lab: "<1/4 Regular", color: "#dc143c", opacity: 0.35, sum: 0},
		{i: 3, lab: "<1/4 Muy activo", color: "#dc143c", opacity: 0.9, sum: 0},
		{i: 4, lab: "<1/4 Bot/spammer", color: "#dc143c", opacity: 0.9, sum: 0},
		{i: 5, lab: "1/4 - 1/2 Reciente", color: "#1e90ff", opacity: 0.1, sum: 0},
		{i: 6, lab: "1/4 - 1/2 Poco activo", color: "#1e90ff", opacity: 0.1, sum: 0},
		{i: 7, lab: "1/4 - 1/2 Regular", color: "#1e90ff", opacity: 0.35, sum: 0},
		{i: 8, lab: "1/4 - 1/2 Muy activo", color: "#1e90ff", opacity: 0.9, sum: 0},
		{i: 9, lab: "1/4 - 1/2 Bot/spammer", color: "#1e90ff", opacity: 0.9, sum: 0},
		{i: 10, lab: "1/2 - 2 Reciente", color: "#32CD32", opacity: 0.1, sum: 0},
		{i: 11, lab: "1/2 - 2 Poco activo", color: "#32CD32", opacity: 0.1, sum: 0},
		{i: 12, lab: "1/2 - 2 Regular", color: "#32CD32", opacity: 0.35, sum: 0},
		{i: 13, lab: "1/2 - 2 Muy activo", color: "#32CD32", opacity: 0.9, sum: 0},
		{i: 14, lab: "1/2 - 2 Bot/spammer", color: "#32CD32", opacity: 0.9, sum: 0},
		{i: 15, lab: "2 - 4 Reciente", color: "#FF8C00", opacity: 0.1, sum: 0},
		{i: 16, lab: "2 - 4 Poco activo", color: "#FF8C00", opacity: 0.1, sum: 0},
		{i: 17, lab: "2 - 4 Regular", color: "#FF8C00", opacity: 0.35, sum: 0},
		{i: 18, lab: "2 - 4 Muy activo", color: "#FF8C00", opacity: 0.9, sum: 0},
		{i: 19, lab: "2 - 4 Bot/spammer", color: "#FF8C00", opacity: 0.9, sum: 0},
		{i: 20, lab: ">4 Reciente", color: "#9932cc", opacity: 0.1, sum: 0},
		{i: 21, lab: ">4 Poco activo", color: "#9932cc", opacity: 0.1, sum: 0},
		{i: 22, lab: ">4 Regular", color: "#9932cc", opacity: 0.35, sum: 0},
		{i: 23, lab: ">4 Muy activo", color: "#9932cc", opacity: 0.9, sum: 0},
		{i: 24, lab: ">4 Bot/spammer", color: "#9932cc", opacity: 0.9, sum: 0}
	];
	
	data.forEach(function(d){
		if(typeof d["posts"] !== 'undefined' && d["posts"] != null && !isNaN(d["posts"])){
			d['followers'] = +d['followers']; 
			d['following'] = +d['following']; 
			d["posts"] = +d["posts"];
			var fecha = d["desde"].split(" ")[0].split("-");
			var hoy = (new Date()).toString().split(" ");
			var f_hoy = new Date(+hoy[3], month2Num(hoy[1]), +hoy[2]);
			d["desde"] = new Date(fecha[0],fecha[1] - 1, fecha[2]);
			d["dias"] = Math.round(( f_hoy.getTime() - d["desde"].getTime())/(1000*60*60*24));
			d["ratio"] = d["posts"]/d["dias"];

			var ratio = (d["following"] > 0 ? d["followers"]/d["following"] : d["followers"]);
			if(ratio <= 0.25){
				porcentajes_usuarios[0]["sum"] = porcentajes_usuarios[0]["sum"] + 1;

				if(d["ratio"] < 1){
					if(d["dias"] < 183) p_usrs_c[0]["sum"] = p_usrs_c[0]["sum"] + 1;
					else p_usrs_c[1]["sum"] = p_usrs_c[1]["sum"] + 1;
				}
				else if(d["ratio"] >= 1 && d["ratio"] <= 24) p_usrs_c[2]["sum"] = p_usrs_c[2]["sum"] + 1;
				else{
					if(d["posts"]/d["followers"] < 15) p_usrs_c[3]["sum"] = p_usrs_c[3]["sum"] + 1;
					else p_usrs_c[4]["sum"] = p_usrs_c[4]["sum"] + 1;
				}
			}

			else if(ratio <= 0.5){
				porcentajes_usuarios[1]["sum"] = porcentajes_usuarios[1]["sum"] + 1;

				if(d["ratio"] < 1){
					if(d["dias"] < 183) p_usrs_c[5]["sum"] = p_usrs_c[5]["sum"] + 1;
					else p_usrs_c[6]["sum"] = p_usrs_c[6]["sum"] + 1;
				}
				else if(d["ratio"] >= 1 && d["ratio"] <= 24) p_usrs_c[7]["sum"] = p_usrs_c[7]["sum"] + 1;
				else{
					if(d["posts"]/d["followers"] < 15) p_usrs_c[8]["sum"] = p_usrs_c[8]["sum"] + 1;
					else p_usrs_c[9]["sum"] = p_usrs_c[9]["sum"] + 1;
				}
			}

			else if(ratio <= 2){
				porcentajes_usuarios[2]["sum"] = porcentajes_usuarios[2]["sum"] + 1;

				if(d["ratio"] < 1){
					if(d["dias"] < 183) p_usrs_c[10]["sum"] = p_usrs_c[10]["sum"] + 1;
					else p_usrs_c[11]["sum"] = p_usrs_c[11]["sum"] + 1;
				}
				else if(d["ratio"] >= 1 && d["ratio"] <= 24) p_usrs_c[12]["sum"] = p_usrs_c[12]["sum"] + 1;
				else{
					if(d["posts"]/d["followers"] < 15) p_usrs_c[13]["sum"] = p_usrs_c[13]["sum"] + 1;
					else p_usrs_c[14]["sum"] = p_usrs_c[14]["sum"] + 1;
				}
			}

			else if(ratio <= 4){
				porcentajes_usuarios[3]["sum"] = porcentajes_usuarios[3]["sum"] + 1;

				if(d["ratio"] < 1){
					if(d["dias"] < 183) p_usrs_c[15]["sum"] = p_usrs_c[15]["sum"] + 1;
					else p_usrs_c[16]["sum"] = p_usrs_c[16]["sum"] + 1;
				}
				else if(d["ratio"] >= 1 && d["ratio"] <= 24) p_usrs_c[17]["sum"] = p_usrs_c[17]["sum"] + 1;
				else{
					if(d["posts"]/d["followers"] < 15) p_usrs_c[18]["sum"] = p_usrs_c[18]["sum"] + 1;
					else p_usrs_c[19]["sum"] = p_usrs_c[19]["sum"] + 1;
				}
			}

			else{
				porcentajes_usuarios[4]["sum"] = porcentajes_usuarios[4]["sum"] + 1;

				if(d["ratio"] < 1){
					if(d["dias"] < 183) p_usrs_c[20]["sum"] = p_usrs_c[20]["sum"] + 1;
					else p_usrs_c[21]["sum"] = p_usrs_c[21]["sum"] + 1;
				}
				else if(d["ratio"] >= 1 && d["ratio"] <= 24) p_usrs_c[22]["sum"] = p_usrs_c[22]["sum"] + 1;
				else{
					if(d["posts"]/d["followers"] < 15) p_usrs_c[23]["sum"] = p_usrs_c[23]["sum"] + 1;
					else p_usrs_c[24]["sum"] = p_usrs_c[24]["sum"] + 1;
				}
			}

		}

	});

	var total = 0;

	porcentajes_usuarios.forEach(function(d){total = total + d["sum"]});
	console.log(total);
	
	while(datos.length < 1500){
		var index = Math.round(Math.random()*data.length);
		if(+data[index]["followers"] < 2500 && +data[index]["following"] < 2500 && (typeof data[index]["posts"] !== undefined && data[index]["posts"] != null && !isNaN(data[index]["posts"]))){
			datos.push(data[index]);
		}
		data.splice(index,1);
	}

	var svg = d3.select("#svg0"),
			width = 500,
			height = 500;

	var zoom = d3.zoom()
			.scaleExtent([1, 1000000])
			.translateExtent([[-30, -100], [width + 50000, height + 100]])
			.on("zoom", zoomed);

	var x = d3.scaleLinear()
			.domain(d3.extent(datos,function(d){return d['following']}))
			.range([-1, width + 1]);

	var y = d3.scaleLinear()
			.domain(d3.extent(datos,function(d){return d['following']}))
			.range([height + 1, -1]);

	svg.append("defs").append("clipPath")
		  .attr("id", "clip")
		.append("rect")
		  .attr("width", width)
		  .attr("height", height);

	var tooltip = d3.select("body").append("div")
    .attr("class", "tooltip")
    .style("opacity", 0);

	var color = d3.scaleLinear()
					.domain([0,1,2,3,4])
					.range(["#dc143c","#1e90ff","#32CD32","#FF8C00","#9932cc"]);

	var xAxis = d3.axisBottom(x)
			.ticks((width + 2) / (height + 2) * 10)
			.tickSize(height)
			.tickPadding(8 - height);

	var yAxis = d3.axisRight(y)
			.ticks(10)
			.tickSize(width)
			.tickPadding(8 - width);
			
	var textx = svg.append("text")
			.attr("class", "label")
			.attr("x", width + 50)
			.attr("y", 15)
			.attr("text-anchor", "middle")
			.text("Seguidores");
		
	var texty = svg.append("text")
			.attr("class", "label")
			.attr("x", 35)
			.attr("y", height + 20)
			.attr("text-anchor", "middle")
			.text("Siguiendo");

	var titulo = svg.append("text")
			.attr("class", "label")
			.attr("x", width/2)
			.attr("y", height + 30)
			.attr("font-size", 20)
			.attr("text-anchor", "middle")
			.text("#TrumpPresident");

	var view0 = svg.append("rect")
			.attr("class", "view")
			.attr("id","rect0")
			.attr("x", 0.5)
			.attr("y", 0.5)
			.attr("width", width - 1)
			.attr("height", height - 1);

	var gX = svg.append("g")
			.attr("class", "axis axis--x")
			.call(xAxis);

	var gY = svg.append("g")
			.attr("class", "axis axis--y")
			.call(yAxis);

	var max_posts = d3.max(datos, function(d){ return d["posts"]; });

	var r = 8;

	var max_ratio = d3.max(datos, function(d){ return d["ratio"]; });

	d3.select("#b0")
			.on("click", resetted);

	var points = svg.append("g")
			.attr("clip-path", "url(#clip)")
			.selectAll(".punto")
			.data(datos)
			.enter().append("circle")
			.attr("class", "punto")
			.attr("id",function(d,i){return "punto-" + i})
			.attr("r",function(d,i){ return r*(1 + d["posts"]/max_posts); })
			.attr("cx", function(d){ return x(d["followers"])})
			.attr("cy", function(d){ return y(d["following"])})
			.attr("stroke", "#dddddd")
			.attr("stroke-width", 1)
			.attr("opacity", function(d){ return (d["ratio"] < 1 ? 0.1 : (d["ratio"] <= 24 ? 0.35 : 0.9))})
			.attr("fill", function(d){ 
				var ratio = (d["following"] > 0 ? d["followers"]/d["following"] : d["followers"]);
				ratio = (ratio <= 0.25 ? 0 : (ratio <= 0.5 ? 1 : ( ratio <= 2 ? 2 : ( ratio <= 4 ? 3 : 4))))
				return color(ratio);
			})
			.on("mouseover", function(d,i) {
					d3.selectAll(".punto").transition().attr("opacity", "0.2").duration(200);
					d3.select("#punto-"+i).transition().attr("opacity","1").duration(200);
          tooltip.transition()
               .duration(200)
               .style("opacity", .9);
          tooltip.html(d["id"] + "<br> (" + d["followers"] 
	        + ", " + d["following"] + ")<br>"
					+ "Posts: " + d["posts"] + "<br>"
					+ "DÃ­as activo: " + d["dias"] + "<br>"
					+ "Coeficiente de actividad: " + d["ratio"] + "<br>"
					+ (d["ratio"] < 1 ? (d["dias"] < 183 ? "Reciente" : "Poco activo") : (d["ratio"] <= 24 ? "Regular" : (d["posts"]/d["followers"] < 15 ? "Muy activo" : "Posible bot/spammer"))))
               .style("left", (d3.event.pageX + 5) + "px")
               .style("top", (d3.event.pageY - 28) + "px");
      })
      .on("mouseout", function(d) {
					d3.selectAll(".punto").transition().attr("opacity", function(d){ return (d["ratio"] < 1 ? 0.1 : (d["ratio"] <= 45 ? 0.35 : 0.9))}).duration(200);
          tooltip.transition()
               .duration(500)
               .style("opacity", 0);
      });

	svg.call(zoom);

	var svg1 = d3.select("#svg1");

	var g_pie = d3.pie().value(function(d){return d["sum"]}).sort(function(a,b){return a["i"] - b["i"]})(porcentajes_usuarios);
	var g_pie2 = d3.pie().value(function(d){return d["sum"]}).sort(function(a,b){return a["i"] - b["i"]})(p_usrs_c);

	var arco = d3.arc().outerRadius(185).innerRadius(125).padAngle(0.01);
	var arco2 = d3.arc().outerRadius(250).innerRadius(190).padAngle(0.005);
	console.log(g_pie2);

	svg1.append("g").attr("transform","translate(" + width/2 + "," + height/2 +")")
		.attr("id","centro")
		.selectAll(".arco_usr")
		.data(g_pie)
		.enter().append("g")
		.attr("class","arco_usr")
		.append("path")
		.attr("d",arco)
		.attr("id", function(d,i){return "arco_usr-"+i})
		.attr("fill", function(d){return d.data["color"]})
		.attr("opacity", 0.55)
		.on("mouseover",function(d,i){
			d3.select("#texto-p")
				.transition().duration(300)
				.attr("opacity",1);
			d3.select("#percentage")
				.text((100*d.data["sum"]/total).toFixed(2) + "%");
			d3.select("#label")
				.text("Usuarios: " + d.data["sum"]);
			d3.select("#lab")
				.text(d.data["lab"]);
			d3.selectAll(".arco_usr").attr("opacity",0.2);
			d3.selectAll(".arco_op").attr("opacity",0.2)
			d3.select("#arco_usr-"+i).attr("opacity",0.85);
		})
		.on("mouseout",function(d){
			d3.select("#texto-p").transition().duration(300)
				.attr("opacity",0);
			d3.selectAll(".arco_usr").attr("opacity","");
			d3.selectAll(".arco_op").attr("opacity","");
		});

	var arco_op = d3.select("#centro")
		.selectAll(".arco_op")
		.data(g_pie2)
		.enter().append("g")
		.attr("class",function(d){ return "arco_op " + (d.data["opacity"] == 0.1 ? "tenue" : (d.data["opacity"] == 0.35 ? "visible" : "opaco"))})
		.append("path")
		.attr("d",arco2)
		.attr("id",function(d,i){return "arco_op-"+i})
		.attr("fill", function(d){return d.data["color"]})
		.attr("opacity", function(d){return d.data["opacity"]})
		.on("mouseover",function(d,i){
			d3.select("#texto-p")
				.transition().duration(300)
				.attr("opacity",1);
			d3.select("#percentage")
				.text((100*d.data["sum"]/total).toFixed(2) + "%");
			d3.select("#label")
				.text("Usuarios: " + d.data["sum"]);
			d3.select("#lab")
				.text(d.data["lab"]);
			d3.selectAll(".arco_usr").attr("opacity",0.2);
			d3.selectAll(".arco_op").attr("opacity",0.2)
			d3.select("#arco_op-"+i).attr("opacity",0.85);
			
		})
		.on("mouseout",function(d){
			d3.select("#texto-p").transition().duration(300)
				.attr("opacity",0);
			d3.selectAll(".arco_usr").attr("opacity","");
			d3.selectAll(".arco_op").attr("opacity","");
		});

	var info_p = d3.select("#centro")
		.append("text")
		.attr("id","texto-p")
		.attr("opacity",0)
		.attr("text-anchor", "middle")
		.attr("x",0)
		.attr("y",-25)
		.append("svg:tspan")
			.attr("id","percentage")
			.attr("x",0)
			.attr("dy",7)
			.attr("font-size",35);
		d3.select("#texto-p").append("svg:tspan")
			.attr("id","label")
			.attr("x",0)
			.attr("dy",25)
			.attr("font-size",24);
		d3.select("#texto-p").append("svg:tspan")
			.attr("id","lab")
			.attr("x",0)
			.attr("dy",25)
			.attr("font-size",24);

	function zoomed() {
		view0.attr("transform", d3.event.transform);
		gX.call(xAxis.scale(d3.event.transform.rescaleX(x)));
		gY.call(yAxis.scale(d3.event.transform.rescaleY(y)));
		d3.selectAll(".punto").attr("transform",d3.event.transform)
			.attr("r", function(d){return (r*(1 + d["posts"]/max_posts))/d3.event.transform.k})
			.attr("stroke-width",1/d3.event.transform.k);
	}

	function resetted() {
		svg.transition()
			  .duration(750)
			  .call(zoom.transform, d3.zoomIdentity);
	}

	function month2Num(mes){
		var meses = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
		return meses.indexOf(mes);
	}

});

</script>

