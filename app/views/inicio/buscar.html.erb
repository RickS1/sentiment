<style>

.tenue { opacity: 0.45; }
.visible { opacity: 0.65; }
.opaco { opacity: 0.9; }
.arco_usr { opacity: 0.8; }

.tooltip {
  position: absolute;
  width: 200px;
  height: 28px;
  pointer-events: none;
}

.axis path {
  display: none;
}

.axis line {
  stroke-opacity: 0.3;
  shape-rendering: crispEdges;
}

.view {
	fill: rgb(255,255,255);
	opacity: 0;
	stroke: rgb(255,255,255);
}

button {
  position: absolute;
  top: 520px;
  left: 450px;
}

#b1{
	top: 1120px;
}

